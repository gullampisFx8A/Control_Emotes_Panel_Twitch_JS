{
    "manifest_version": 3,
    "name": "Control Emotes Panel",
    "version": "2.6.52",
    "description": "Block Twitch emotes in chat with a management interface, compatible with Alternate Player for Twitch.tv",
    "permissions": [
        "storage",
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.twitch.tv/*",
        "https://www.twitch.tv/*",
        "https://www.twitch.tv/embed/*",
        "https://*.ttvnw.net/*",
        "https://*.jtvnw.net/*",
        "https://*.twitchcdn.net/*",
        "https://cdn.frankerfacez.com/*",
        "https://cdn.7tv.app/*",
        "https://cdn.betterttv.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*",
                "https://www.twitch.tv/*",
                "https://www.twitch.tv/embed/*",
                "https://*.ttvnw.net/*",
                "https://*.jtvnw.net/*",
                "https://*.twitchcdn.net/*",
                "https://cdn.frankerfacez.com/*",
                "https://cdn.7tv.app/*",
                "https://cdn.betterttv.net/*"
            ],
            "js": ["chart.umd.js", "combined.js"],
            "css": ["css/styles.css"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
               "css/styles.css",
                "css/themes/glassmorphism.css",
                "css/themes/waterBlue.css",
                "css/themes/dark.css",
                "css/themes/darkRaspberry.css"
            ],
            "matches": [
                "https://*.twitch.tv/*",
                "https://www.twitch.tv/*"
            ]
        }
    ],
    "icons": {
        "256": "openiConPanelbttnVariant2.png"
    }
}